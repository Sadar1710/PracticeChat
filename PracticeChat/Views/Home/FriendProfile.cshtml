

@model PracticeChat.ViewModels.ViewPtofileVM

@{
    ViewData["Title"] = "FriendProfile";
    var photo = "~/img/" + (Model.PhotoPath ?? "avatar-1.png");
}

<div class="container-fluid" style="padding-top:10px;position:relative;">
    <h3 class="text-center">@Model.UserName Profile</h3>
    <div class="card" style="width:80%;margin-left: 50%;transform: translateX(-50%);
          box-shadow: 0 4px 6px 0 rgba(0,0,0,0.2),0 5px 6px 0 rgba(0,0,0,0.4);">

        <div class="card-body">
            <img class="rounded-circle mr-auto" src="@photo" asp-append-version="true" width="200" height="200">
            <table class="table">               
                <tr>
                    <th>User Name:</th>
                    <td>@Model.UserName</td>
                </tr>
                <tr>
                    <th>Phone Number:</th>
                    <td>@Model.PhoneNumber</td>
                </tr>
                <tr>
                    <th>Email:</th>
                    <td>@Model.Email</td>
                </tr>
            </table>           
        </div>
    </div>
</div>